<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/account_layout"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="20dp">
            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/recharge_account_img"
                android:src="@drawable/recharge_account_plus"
                android:layout_height="match_parent" />
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:text="银行转帐"
            android:layout_marginLeft="20dp"
            android:id="@+id/recharge_account_use_tv"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/recharge_account_money_tv"
            android:text="¥50"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/account_layout"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_marginLeft="20dp"
            android:id="@+id/recharge_account_time_tv"
            android:text="2016/12/19 12:40:39"
            android:textSize="15dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>